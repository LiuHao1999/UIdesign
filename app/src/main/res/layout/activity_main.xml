<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonLogIn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="5px"
        android:background="@drawable/frame"
        android:text="手机号登陆"
        android:textColor="#CF4240"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonLogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:background="@drawable/frame"
        android:text="注册"
        android:textColor="#CF4240"
        android:textSize="20dp" />


    <ImageView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_main" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="92dp"
        android:src="@drawable/ic_icon" />

    <Button
        android:id="@+id/ic_wx"
        android:layout_width="49dp"
        android:layout_height="53dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/ic_wx" />

    <Button
        android:id="@+id/ic_qq"
        android:layout_width="49dp"
        android:layout_height="53dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/ic_qq" />

    <Button
        android:id="@+id/ic_wb"
        android:layout_width="49dp"
        android:layout_height="53dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/ic_wb" />

    <Button
        android:id="@+id/ic_wy"
        android:layout_width="49dp"
        android:layout_height="53dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/ic_wy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp"
        android:text="其他登录方式"
        android:textColor="#7B7B7B"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_wx"
        android:layout_alignLeft="@+id/ic_wx"
        android:layout_marginLeft="7dp"
        android:text="微信"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_wx"
        android:layout_alignLeft="@+id/ic_qq"
        android:layout_marginLeft="7dp"
        android:text="QQ"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_wx"
        android:layout_alignLeft="@+id/ic_wb"
        android:layout_marginLeft="7dp"
        android:text="微博"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_wx"
        android:layout_marginStart="270dp"
        android:text="网易邮箱"
        android:textSize="18dp" />

</RelativeLayout>